{% extends 'layouts/app.twig' %}
{% block pageclass %}admin{% endblock %}
{% block title %}Create Age Group{% endblock %}

{% block content %}

<div class="age-groups create">
    <div class="create__container container">
        <div class="top-bar">
            <h1>Create New Age Group</h1>
            <a href="{{ path_for('agegroups.index') }}" class="button">View All</a>
        </div>

        <div class="content-wrapper">
            <form action="{{ path_for('agegroups.create') }}" method="post" class="create-form">
                <div class="container--full form-wrapper">
                    <div class="field">
                        <label for="name">Group Name:</label>
                        <input type="text" name="name" placeholder="Junior Boys 11-13" required>
                    </div>

                    <div class="field">
                        <label for="length">Tournament Length:</label>
                        <select name="length" required>
                            <option value="9">9 Holes</option>
                            <option value="18">18 Holes</option>
                        </select>
                    </div>

                    <button class="button submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
